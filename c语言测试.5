#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>
#include<windows.h>
#include<stdlib.h>
int main()
{
	char arr1[] = "welcome to home !!!!!!";
	char arr2[] = "######################";
	int left = 0;
	int right = 0;
	//int right = sizeof(arr1) / sizeof(arr1[0]) - 2;
    //若最后-1求出的是‘\n'的下标，-2才是最后一个‘！’的下标
	int right = strlen(arr1) - 1;//strlen():求字符串长度，此函数求出的元素个数是不包含‘\n’的，
	                             //但是下标是元素个数-1。
	while (left <= right)
	{
		arr2[left] = arr1[left];//将arr1中的左边元素赋值给arr2中左边的元素
		arr2[right] = arr1[right];//将arr1中的右边元素赋值给arr2中右边的元素
		printf("%s\n", arr2);
		//休息一秒
		Sleep(1000);//单位：毫秒  1000毫秒=1秒; Sleep()是一个库函数需要使用头文件<windows.h>
		system("cls");//system():执行系统命令的一个函数且是一个库函数 ，需使用<stdlib.h>头文件
					  //-cls清空屏幕
		left++;
		right--;
	}
	printf("%s\n", arr2);
	return 0;
}
