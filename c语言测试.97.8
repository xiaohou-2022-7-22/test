#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int line = 0;
	scanf("%d", &line);
	//打印上半部分
123456*
12345***
1234*****
123*******
12*********
1***********
*************
	int i = 0;
	for (i = 0; i < line; i++)
	{
		//打印空格
		int j = 0;
		for (j = 0; j < line - 1 - i; j++)//第一行有6个空格,i为0,
		{                                 //第二行有5个空格,i为1。
			printf(" ");                    //第三行有4个空格,i为2。
		}
		//打印*
		for (j = 0; j < 2 * i + 1; j++)//第一行有  *   ，i为0。
		{                              //第二行有 ***  ，i为1。
			printf("*");                 //第三行有***** ，i为2。
		}
		printf("\n");
	}
	//打印下半部分
  
1***********
12*********
123*******
1234*****
12345***
123456*
	for (i = 0; i < line - 1; i++)
	{
		int j = 0;
		//打印空格
		for (j = 0; j <= i; j++)//第一行有1空格,i为0,
		{                       //第二行有2空格,i为1。
			printf(" ");          //第三行有3空格,i为2。
		}
		//打印*
		for (j = 0; j < 2 * (line - 1 - i) - 1; j++)//第一行有*********** ，i为0。
		{                                           //第二行有 *********，i为1。
			printf("*");                              //第三行有  *******  ，i为2。
		}
		printf("\n");
	}
	return 0;
}
