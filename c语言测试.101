#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>
#include<assert.h>
//NULL--控制针。
//NUL/Mull--‘\0’。
//strstr--查找字符串。
//char* strstr(const char*,const char*)
//模拟实现my_strstr
char* my_strstr(const char* p1, const char* p2)
{
	assert(p1 != NULL);
	assert(p2 != NULL);
	char* s1 = NULL;
	char* s2 = NULL;
	char* cur = (char*)p1;
	if (*p2 == '\0')
	{
		return (char*)p1;
	}
	while (*cur)
	{
		s1 = cur;
		s2 = (char*)p2;

		while ((*s1 != '\0') && (*s2 != '\0') && (*s1 == *s2))//(*s1&&*s2&&(*s1==*s2));
		{
			s1++;
			s2++;
		}
		if (*s2 == '\0')
		{
			return cur;//找到子串。
		}
		cur++;
	}
	return NULL;//找不到子串。
}
int main()
{
	char* p1 = "abcdefabcdef";
	char* p2 = "def";
	char* ret = strstr(p1, p2);
	char* ret = my_strstr(p1, p2);
	if (ret == NULL)
	{
		printf("子串不存在\n");
	}
	else
	{
		printf("%s\n", ret);
	}
	return 0;
}
